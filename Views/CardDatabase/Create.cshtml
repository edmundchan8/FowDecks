@model FowDecks.ViewModels.CreateCardViewModel

<form enctype="multipart/form-data" method="post">
    <div class="p-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add a new Card</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                    <div class="col-12 mt-3">
                        <input asp-for="@Model.Image" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                    </div>

                    <div class="col-12">
                        <label class="mt-3" asp-for="@Model.CardText"></label>
                        <input asp-for="@Model.CardText" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="mt-3" asp-for="@Model.Set"></label>
                        <input asp-for="@Model.Set" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.Type"></label>
                        <input asp-for="@Model.Type" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.Rarity"></label>
                        <input asp-for="@Model.Rarity" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.Race"></label>
                        <input asp-for="@Model.Race" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.Attribute"></label>
                        <input asp-for="@Model.Attribute" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.CardNumber"></label>
                        <input asp-for="@Model.CardNumber" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label class="mt-3" asp-for="@Model.Cost"></label>
                        <input asp-for="@Model.Cost" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label class="mt-3" asp-for="@Model.TotalCost"></label>
                        <input asp-for="@Model.TotalCost" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label class="mt-3">Attack</label>
                        <input asp-for="@Model.Atk" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label class="mt-3">Defence</label>
                        <input asp-for="@Model.Def" class="form-control" />
                    </div>
                    <div class="col-6">
                        <label class="mt-3" asp-for="@Model.Divinity"></label>
                        <input asp-for="@Model.Divinity" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        })
    </script>
}